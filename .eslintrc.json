{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "React": "writable"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "plugins": ["react", "tailwindcss", "@typescript-eslint", "sort-destructure-keys", "typescript-sort-keys"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next",
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "rules": {
    "no-console": ["error", { "allow": ["warn", "info", "error"] }],
    "prefer-const": "error",
    "no-restricted-syntax": ["error", { "selector": "TSEnumDeclaration" }],

    // react
    "react/display-name": "error",
    "react/jsx-handler-names": [
      "error",
      {
        "eventHandlerPrefix": "handle",
        "eventHandlerPropPrefix": "on",
        "checkLocalVariables": false,
        "checkInlineFunction": true
      }
    ],
    "react/destructuring-assignment": ["error", "always"],
    "react-hooks/exhaustive-deps": "warn",

    //  typescript
    "@typescript-eslint/no-unused-vars": ["error", { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }],
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": ["function", "method"],
        "format": ["camelCase"]
      },
      {
        "selector": "typeLike",
        "format": ["PascalCase", "UPPER_CASE"]
      },
      {
        "selector": ["variable", "parameter"],
        "types": ["boolean", "string", "number", "array"],
        "format": ["camelCase"]
      },
      {
        "selector": "variable",
        "types": ["boolean"],
        "format": ["PascalCase"],
        "prefix": ["is", "should", "has", "can", "did", "will", "no"]
      }
    ],

    // sort
    "typescript-sort-keys/interface": [
      "error",
      "asc",
      { "caseSensitive": false, "natural": true, "requiredFirst": true }
    ],
    "typescript-sort-keys/string-enum": "error",
    "react/jsx-sort-props": ["error", { "shorthandFirst": true }],
    "sort-destructure-keys/sort-destructure-keys": 2,
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "parent", "sibling", "index", "object", "type"],
        "pathGroups": [
          {
            "pattern": "@alias/**",
            "group": "parent",
            "position": "before"
          }
        ],
        "alphabetize": {
          "order": "asc"
        },
        "newlines-between": "always"
      }
    ]
  },
  "overrides": [
    {
      "files": "src/**/*",
      "excludedFiles": ["src/components/**/*", "src/page-components/**/*", "src/features/**/*"],
      "rules": {
        "no-restricted-imports": ["error", { "patterns": ["./", "../"] }]
      }
    }
  ]
}
